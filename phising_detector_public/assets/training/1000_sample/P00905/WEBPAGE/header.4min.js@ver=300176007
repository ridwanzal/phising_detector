$(document).ready(function(){function A(B,C,D){$("*",".controls").removeClass("active");$(B).addClass("active");if($(C).width()<$(B).width()+60){if($.browser.msie&&parseInt($.browser.version)<=7){$(C).css("width",$(B).width()+60)}else{$(C).css("min-width",$(B).width()+60)}}if($(C).is(":visible")){$(C).fadeOut("fast",function(){$(B).removeClass("active")})}else{$(".click_container").hide();$(C).fadeIn("fast").show();$(document.body).mousedown(function(F){var E=$(F.target).parents().hasClass("controls");if(E){return true}$(C).fadeOut("fast",function(){$(B).removeClass("active")})})}$("input[name=login]",C).focusP();return false}$("#active_filter").click(function(C){C.stopPropagation();var B=$(".cclick_container.cfilter");var E=$(this);if(B.is(":visible")){D()}else{E.css("background-color","#EFF8FF");B.fadeIn("fast").show();$("body").mousedown(D)}$("a",B).click(function(){var F=$(this).attr("class").split(" ")[0];$("#active_filter i").removeClass().addClass(F);$(".cclick_container a").show().removeClass("clicked");$(".cclick_container"+F).addClass("clicked");D()});function D(){B.fadeOut("fast",function(){E.css("background","none")})}});$(".settings .gear").click(function(){A(".settings .gear",".click_container.csettings",this)});$(".ncenter .notifications").click(function(){A(".ncenter .notifications",".click_container.cnotifications",this)});$("#loggedInInfo").click(function(B){A("#loggedInInfo","#loggedInInfo .myAccountDropdownMenu",this);B.stopPropagation()});$(".login .llink").click(function(){A(".login .llink",".click_container.clogin",this)});$(".smallHeader .sign .textlink").click(function(){A(".smallHeader .sign .textlink",".click_container.csign",this)});$(".ucp .textlink").click(function(){A(".ucp .textlink",".click_container.cucp",this)})});